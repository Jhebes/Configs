# General Config
#=====================================================
set $default_gaps_inner 15
set $default_gaps_outer 5
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent

# fix graphics glitch
new_window pixel

# Friendly names for workspaces



# Hotkeys
#=====================================================
set $mod Mod1
bindsym $mod+Shift+Return exec --no-startup-id urxvt
bindsym $mod+x kill
bindsym $mod+p exec --no-startup-id dmenu_custom
bindsym $mod+l exec --no-startup-id i3lock --color 000000

# Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer -q set Master toggle

# Screen Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

bindsym F9 exec xdotool click 1

# Manage config
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# screenshot
bindsym --release Print exec scrot $HOME/Pictures/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png

# Navigation Controls
#=====================================================
# Relies on a ruby script I wrote called i3man
bindsym $mod+Up             exec --no-startup-id i3man -d next
bindsym $mod+Down           exec --no-startup-id i3man -d prev
bindsym $mod+Left           exec --no-startup-id i3man -d prev --relative
bindsym $mod+Right          exec --no-startup-id i3man -d next --relative


bindsym $mod+Shift+Up       exec --no-startup-id i3man -d next --pull
bindsym $mod+Shift+Down     exec --no-startup-id i3man -d prev --pull
bindsym $mod+Shift+Left     exec --no-startup-id i3man -d prev --relative --pull
bindsym $mod+Shift+Right    exec --no-startup-id i3man -d next --relative --pull

# Super key used for window manipulation in the
# workspace
bindsym Mod4+Left           focus left
bindsym Mod4+Right          focus right
bindsym Mod4+Up             focus up
bindsym Mod4+Down           focus down

bindsym Mod4+Shift+Left     move left
bindsym Mod4+Shift+Down     move down
bindsym Mod4+Shift+Up       move up
bindsym Mod4+Shift+Right    move right

bindsym $mod+v split h
bindsym $mod+c split v

bindsym $mod+space layout toggle split

# Controls for Resizing Windows
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j           resize shrink width 10 px or 10 ppt
        bindsym k           resize grow height 10 px or 10 ppt
        bindsym l           resize shrink height 10 px or 10 ppt
        bindsym semicolon   resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym q mode "default"
}
# Enter resize mode
bindsym $mod+r mode "resize"


# Appearance
#=====================================================
set $black       #2c2836
set $darkblack   #73707e
set $red         #bb7473
set $darkred     #cf9fa4
set $green       #68b782
set $darkgreen   #9acbad
set $yellow      #abb773
set $darkyellow  #c5cba4
set $blue        #7865c5
set $darkblue    #a396d9
set $magenta     #bb65b6
set $darkmagenta #cf96cf
set $cyan        #9ac1d9
set $darkcyan    #3d7070
set $white       #aaaaaa
set $darkgrey    #101820
set $darkwhite   #f1edfb
font pango:Profont 15

#                       BORDER      BACKGROUND  TEXT   INDICATOR
client.focused          $black      $darkcyan   $white $cyan
client.unfocused        $black      $cyan       $white $darkcyan
client.focused_inactive $black      $darkgrey   $white $darkcyan
client.urgent           $black      $red        $white $red

bar {
        status_command i3blocks
        position top
        font profont 15
        strip_workspace_numbers yes
        colors {
                statusline         $white
                background         $darkgrey
                separator          $cyan

#                                  BORDER       BACKGROUND   TEXT
                focused_workspace  $darkgrey    $darkcyan    $white
                inactive_workspace $darkgrey    $darkgrey    $white
                active_workspace   $darkgrey    $darkcyan    $white
                urgent_workspace   $red         $red         $white
        }
}

